<html>
<head>
    <title>Razor View Engine Demo</title>
</head>
<body>
    <h1>Hello @Model.FirstName</h1>
    <p>This is a sample Razor view!</p>
    <img src='@Url.Content("~/content/face.png")' alt="Face"/>


@{ 
    string foo = null;
    string bar = null; 
    bool isChecked = true;
}
    <div id="foo" class="@foo @bar">
    <input type="checkbox" checked="@isChecked"/>
</body>
</html>